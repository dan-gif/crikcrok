extends ../layout.pug

block "content"
    div(class= "d-flex flex-row content justify-content-center mx-auto")
        form(class="card" method="post" action="/users/signup")
                div(class="card-header") Inscription
                div( class="card-body") 
                    div(class="form-group")
                        label username
                        input(class= "form-control" type="text" name="username")
                        label firstname
                        input(class= "form-control" type="text" name="firstname")
                        label pseudo
                        input(class= "form-control" type="text" name="pseudo")
                        label email
                        input(class= "form-control" type="email" name="email")
                        label password
                        input(class= "form-control" type="password" name="password")
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger")=error
                    div(class="w-100")
                        input(type="submit" value="valider" class="btn btn-primary ml-auto d-block")
