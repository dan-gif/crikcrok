extends ../layout.pug

block "content"
    div(class= "d-flex flex-row content mx-auto")
        div(class= "profile-container ") 
            include ../includes/profile
        div(class= "flex-fill") 
            form(class="card" method="post" action="/crikcroks")
                div(class="card-header") Ecrire un crikcrok / recette
                div( class="card-body") 
                    div(class="form-group")
                        textarea(class="form-control" name="content" placeholder=" what is happening")
                    div
                        label Selectionnez une image
                            input.filepond(type='file' name='cover')
                    if errors
                        ul(class="my-2")
                            each error in errors
                                li(class="text-danger")=error
                    div(class="w-100")
                        input(type="submit" value="Envoyer" class="btn btn-primary ml-auto d-block")
